  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/api/cmd/main.go",
      "env": {},
      "envFile": "${workspaceFolder}/api/.env",
      "args": ["-dbhost", "localhost", "-webpath", "${workspaceFolder}/api/static"],
      "showLog": true
    },
    {
      "name": "Attach to API",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "",
      "host": "localhost",
      "port": 9229,
      "showLog": true
    }
  ]
}
