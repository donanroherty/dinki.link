  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/api/cmd/app",
      "env": {} ,
      "envFile": "${workspaceFolder}/db/.env",
      "args": ["-dbhost", "localhost", "-webpath", "${workspaceFolder}/api/static"]
    },
    {
      "name": "Attach to API",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "",
      "port": 40000,
      "host": "127.0.0.1",
      "showLog": true
    }
  ]
}
